{
	"name": "web-porridge",
	"version": "4.0.1",
	"description": "Feature-enhanced wrappers for the Storage and IndexedDB APIs",
	"license": "MIT",
	"scripts": {
		"build": "tsdown",
		"dev": "npm run build -- --watch",
		"fix": "biome check --fix",
		"lint:code": "biome check",
		"lint:deps": "knip --production",
		"lint": "concurrently --prefix '{name}' -c 'blue,green,magenta' 'npm:lint:*'",
		"prepack": "npm run build",
		"prepare": "lefthook install",
		"publish:jsr": "deno publish",
		"publish:npm": "np --package-manager pnpm --any-branch",
		"start": "npm run dev",
		"test": "vitest run",
		"test:coverage": "vitest --coverage --ui",
		"test:watch": "vitest"
	},
	"type": "module",
	"typings": "./lib/index.d.ts",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.js"
		}
	},
	"files": [
		"lib/",
		"LICENSE",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/web-porridge.git"
	},
	"keywords": [
		"webstorage",
		"local-storage",
		"localstorage",
		"session-storage",
		"sessionstorage",
		"storage api",
		"indexeddb"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"engineStrict": true,
	"dependencies": {
		"dot-prop": "^9.0.0",
		"idb-keyval": "^6.2.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@idleberg/configs": "^0.1.0",
		"@playwright/test": "^1.55.0",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^22.17.0",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "3.2.4",
		"concurrently": "^9.2.0",
		"knip": "^5.63.0",
		"lefthook": "^1.13.0",
		"np": "^10.2.0",
		"tsdown": "^0.15.1",
		"tslib": "^2.8.1",
		"tsm": "^2.3.0",
		"typescript": "^5.9.2",
		"vitest": "^3.2.4"
	}
}
