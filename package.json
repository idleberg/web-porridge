{
  "name": "web-porridge",
  "version": "2.0.0",
  "description": "Feature-enhanced wrappers for the Storage and IndexedDB APIs",
  "license": "MIT",
  "scripts": {
    "build:bundle": "esbuild src/index.ts --outfile=lib/web-porridge.mjs --format=esm",
    "build:storage": "esbuild src/porridge.ts --outfile=lib/storage/index.mjs --format=esm",
    "build:db": "esbuild src/porridge-db.ts --outfile=lib/db/index.mjs --format=esm",
    "build": "npm-run-all --parallel build:*",
    "dev": "npm run build:bundle -- --watch",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "prepare": "husky install",
    "start": "npm run dev",
    "test": "uvu tests"
  },
  "type": "module",
  "typings": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/web-porridge.mjs"
    },
    "./storage": {
      "import": "./lib/storage/index.mjs"
    },
    "./db": {
      "import": "./lib/db/index.mjs"
    },
    "./types": {
      "import": "./types/index.d.ts"
    }
  },
  "typesVersions": {
    "*": {
      "./": [
        "./types/index.d.ts"
      ]
    }
  },
  "files": [
    "dist/",
    "lib/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/web-porridge.git"
  },
  "keywords": [
    "webstorage",
    "local-storage",
    "localstorage",
    "session-storage",
    "sessionstorage",
    "storage api",
    "indexeddb"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "dot-prop": "^7.2.0",
    "idb-keyval": "^6.2.0"
  },
  "devDependencies": {
    "@types/node": "^18.13.0",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.52.0",
    "browser-env": "^3.3.0",
    "cross-env": "^7.0.3",
    "esbuild": "^0.17.8",
    "eslint": "^8.34.0",
    "eslint-plugin-json": "^3.1.0",
    "fake-indexeddb": "^4.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^13.1.2",
    "localstorage-polyfill": "^1.0.1",
    "node-navigator": "^1.0.1",
    "npm-run-all2": "^6.0.4",
    "prettier": "^2.8.4",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^2.0.1",
    "rimraf": "^4.1.2",
    "tslib": "^2.5.0",
    "typescript": "^4.9.5",
    "uvu": "^0.5.6"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
