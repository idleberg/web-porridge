{
	"name": "web-porridge",
	"version": "3.0.0",
	"description": "Feature-enhanced wrappers for the Storage and IndexedDB APIs",
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"dev": "npm run build -- --watch",
		"fix": "eslint --fix ./src",
		"lint:code": "eslint **/*.json **/*.ts --no-warn-ignored",
		"lint:deps": "knip --production",
		"lint:md": "remark . --quiet --frail --ignore-path .gitignore",
		"lint": "npm-run-all --parallel lint:*",
		"prepack": "npm run build",
		"prepare": "husky install",
		"start": "npm run dev",
		"test": "uvu -r tsm tests"
	},
	"type": "module",
	"typings": "./lib/index.d.ts",
	"exports": {
		".": {
			"import": "./lib/index.js"
		},
		"./types": {
			"import": "./lib/index.d.ts"
		}
	},
	"files": [
		"lib/",
		"LICENSE",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/idleberg/web-porridge.git"
	},
	"keywords": [
		"webstorage",
		"local-storage",
		"localstorage",
		"session-storage",
		"sessionstorage",
		"storage api",
		"indexeddb"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"engineStrict": true,
	"dependencies": {
		"dot-prop": "^9.0.0",
		"idb-keyval": "^6.2.1"
	},
	"devDependencies": {
		"@types/node": "^18.13.0",
		"browser-env": "^3.3.0",
		"cross-env": "^7.0.3",
		"eslint": "^9.5.0",
		"eslint-plugin-jsonc": "^2.16.0",
		"eslint-plugin-unicorn": "^54.0.0",
		"fake-indexeddb": "^6.0.0",
		"husky": "^9.0.11",
		"knip": "^5.19.0",
		"lint-staged": "^15.2.7",
		"localstorage-polyfill": "^1.0.1",
		"node-navigator": "^1.0.1",
		"npm-run-all2": "^6.2.0",
		"prettier": "^3.3.2",
		"remark-cli": "^12.0.1",
		"remark-preset-lint-recommended": "^7.0.0",
		"remark-preset-prettier": "^2.0.1",
		"rimraf": "^5.0.7",
		"tslib": "^2.6.3",
		"tsm": "^2.3.0",
		"tsup": "^8.1.0",
		"typescript": "^5.4.5",
		"typescript-eslint": "^7.13.0",
		"uvu": "^0.5.6"
	},
	"lint-staged": {
		"*.(json|ts)": "eslint --cache --fix",
		"*.md": "prettier --write"
	},
	"packageManager": "pnpm@9.3.0+sha512.ee7b93e0c2bd11409c6424f92b866f31d3ea1bef5fbe47d3c7500cdc3c9668833d2e55681ad66df5b640c61fa9dc25d546efa54d76d7f8bf54b13614ac293631"
}
