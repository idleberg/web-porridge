{
  "name": "web-porridge",
  "version": "0.20.0",
  "description": "Feature-enhanced wrappers for the Storage and IndexedDB APIs",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist ./lib && cross-env NODE_ENV=production rollup -c",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "prepare": "husky install",
    "start": "rollup -c -w",
    "test": "uvu tests"
  },
  "type": "module",
  "typings": "./types/index.d.ts",
  "exports": {
    ".": {
      "import": "./lib/web-porridge.mjs",
      "require": "./lib/web-porridge.cjs"
    },
    "./storage": {
      "import": "./lib/storage/index.mjs",
      "require": "./lib/storage/index.cjs"
    },
    "./db": {
      "import": "./lib/db/index.mjs",
      "require": "./lib/db/index.cjs"
    }
  },
  "files": [
    "dist/",
    "lib/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/web-porridge.git"
  },
  "keywords": [
    "webstorage",
    "local-storage",
    "localstorage",
    "session-storage",
    "sessionstorage",
    "storage api",
    "indexeddb"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "dot-prop": "^7.2.0",
    "idb-keyval": "^6.2.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.11.4",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "browser-env": "^3.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.26.0",
    "eslint-plugin-json": "^3.1.0",
    "fake-indexeddb": "^3.1.8",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "localstorage-polyfill": "^1.0.1",
    "node-navigator": "^1.0.1",
    "npm-run-all2": "^6.0.2",
    "prettier": "^2.7.1",
    "remark-cli": "^11.0.0",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^2.0.1",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.3",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "uvu": "^0.5.6"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
