{
  "name": "web-porridge",
  "version": "0.16.0",
  "description": "Feature-enhanced wrappers for the WebStorage interface",
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "jsonlint --quiet ./*.json",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "start": "rollup -c -w",
    "test": "ava ./test/indexedDB.*.js ./test/localStorage.*.js ./test/util.js --verbose",
    "prepare": "husky install"
  },
  "type": "commonjs",
  "main": "./lib/index.js",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "default": "./lib/index.mjs"
    }
  },
  "module": "./lib/index.mjs",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/web-porridge.git"
  },
  "keywords": [
    "webstorage",
    "local-storage",
    "localstorage",
    "session-storage",
    "sessionstorage",
    "indexeddb",
    "amazon cognito"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "dot-prop": "^6.0.1",
    "idb-keyval": "^6.1.0",
    "matcher": "^5.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.2.5",
    "@types/node": "^14.17.19",
    "@typescript-eslint/eslint-plugin": "^5.10.0",
    "@typescript-eslint/parser": "^5.10.0",
    "ava": "^3.15.0",
    "browser-env": "^3.3.0",
    "eslint": "^8.7.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-json": "^3.1.0",
    "esm": "^3.2.25",
    "fake-indexeddb": "^3.1.3",
    "husky": "^7.0.0",
    "lint-staged": "^12.2.1",
    "localstorage-polyfill": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "remark-cli": "^10.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.57.0",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.4.3",
    "uuid": "^8.3.2"
  },
  "ava": {
    "require": [
      "esm"
    ]
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.ts": "eslint --cache --fix",
    "*.json": "jsonlint --quiet",
    "*.md": "prettier --write"
  }
}
