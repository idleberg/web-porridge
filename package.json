{
  "name": "web-porridge",
  "version": "0.14.0",
  "description": "Feature-enhanced wrappers for the WebStorage interface",
  "license": "MIT",
  "scripts": {
    "build": "rimraf tsconfig.tsbuildinfo && tsc --pretty --project ./",
    "dev": "tsc --watch --pretty --project ./",
    "lint": "tslint --project ./",
    "lint:fix": "tslint --fix --project ./",
    "test": "ava ./test/indexedDB.*.js ./test/localStorage.*.js ./test/util.js --verbose"
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/web-porridge.git"
  },
  "keywords": [
    "webstorage",
    "local-storage",
    "localStorage",
    "session-storage",
    "sessionStorage",
    "IndexedDB",
    "amazon cognito"
  ],
  "dependencies": {
    "dot-prop": "^5.2.0",
    "idb-keyval": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^13.9.8",
    "ava": "^3.5.2",
    "browser-env": "^3.3.0",
    "fake-indexeddb": "^3.0.0",
    "husky": "^4.2.3",
    "localstorage-polyfill": "^1.0.1",
    "rimraf": "^3.0.2",
    "tslint": "^6.1.0",
    "typescript": "^3.8.3",
    "uuid": "^7.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  }
}
