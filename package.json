{
  "name": "web-porridge",
  "version": "0.17.0",
  "description": "Feature-enhanced wrappers for the WebStorage interface",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./dist ./lib && cross-env NODE_ENV=production rollup -c",
    "dev": "npm run start",
    "fix": "eslint --fix ./src",
    "lint:json": "eslint ./*.json --ignore-path .gitignore",
    "lint:md": "remark . --quiet --frail --ignore-path .gitignore",
    "lint:ts": "eslint ./src --ignore-path .gitignore",
    "lint": "npm-run-all --parallel lint:*",
    "prepack": "npm run build",
    "prepare": "husky install",
    "start": "rollup -c -w",
    "test": "ava ./test/localStorage.*.mjs ./test/indexedDB.*.mjs --verbose"
  },
  "type": "module",
  "exports": {
    "import": "./lib/web-porridge.esm.js",
    "module": "./lib/web-porridge.esm.js"
  },
  "files": [
    "dist/",
    "lib/",
    "types/",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/web-porridge.git"
  },
  "keywords": [
    "webstorage",
    "local-storage",
    "localstorage",
    "session-storage",
    "sessionstorage",
    "storage api",
    "indexeddb"
  ],
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "dot-prop": "^7.1.1",
    "idb-keyval": "^6.1.0",
    "node-navigator": "^1.0.1"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.1",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.0",
    "@types/node": "^16.11.22",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "ava": "^4.0.1",
    "browser-env": "^3.3.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.8.0",
    "eslint-import-resolver-typescript": "^2.5.0",
    "eslint-plugin-json": "^3.1.0",
    "fake-indexeddb": "^3.1.7",
    "husky": "^7.0.4",
    "lint-staged": "^12.3.3",
    "localstorage-polyfill": "^1.0.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.5.1",
    "remark-cli": "^10.0.1",
    "remark-preset-lint-recommended": "^6.1.2",
    "remark-preset-prettier": "^1.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.67.1",
    "rollup-plugin-filesize": "^9.1.2",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.3.1",
    "typescript": "^4.5.5"
  },
  "prettier": {
    "semi": true,
    "singleQuote": true,
    "tabWidth": 4
  },
  "lint-staged": {
    "*.(json|ts)": "eslint --cache --fix",
    "*.md": "prettier --write"
  }
}
