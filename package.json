{
  "name": "web-porridge",
  "version": "0.16.0",
  "description": "Feature-enhanced wrappers for the WebStorage interface",
  "license": "MIT",
  "scripts": {
    "build": "concurrently --names \"tsc,webpack\" \"npm run build:module\" \"npm run build:web\"",
    "build:module": "rimraf tsconfig.tsbuildinfo && tsc --pretty --project ./",
    "build:web": "webpack --mode production",
    "dev": "tsc --watch --pretty --project ./",
    "lint": "tslint --project ./",
    "lint:fix": "tslint --fix --project ./",
    "test": "ava ./test/indexedDB.*.js ./test/localStorage.*.js ./test/util.js --verbose"
  },
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/idleberg/web-porridge.git"
  },
  "keywords": [
    "webstorage",
    "local-storage",
    "localstorage",
    "session-storage",
    "sessionstorage",
    "indexeddb",
    "amazon cognito"
  ],
  "dependencies": {
    "dot-prop": "^5.2.0",
    "idb-keyval": "^3.2.0"
  },
  "devDependencies": {
    "@types/node": "^14.0.1",
    "ava": "^3.8.2",
    "browser-env": "^3.3.0",
    "concurrently": "^5.2.0",
    "esm": "^3.2.25",
    "fake-indexeddb": "^3.0.0",
    "husky": "^4.2.5",
    "localstorage-polyfill": "^1.0.1",
    "rimraf": "^3.0.2",
    "ts-loader": "^7.0.4",
    "tslint": "^6.1.2",
    "typescript": "^3.9.2",
    "uuid": "^8.0.0",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint"
    }
  },
  "ava": {
    "require": [
      "esm"
    ]
  }
}
