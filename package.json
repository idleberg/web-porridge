{
	"name": "web-porridge",
	"version": "4.0.0",
	"description": "Feature-enhanced wrappers for the Storage and IndexedDB APIs",
	"license": "MIT",
	"scripts": {
		"build": "tsup",
		"dev": "npm run build -- --watch",
		"fix": "eslint --fix ./src",
		"lint:code": "eslint **/*.json src/*.ts --no-warn-ignored",
		"lint:deps": "knip --production",
		"lint:md": "remark . --quiet --frail --ignore-path .gitignore",
		"lint": "concurrently --prefix '{name}' -c 'blue,green,magenta' 'npm:lint:*'",
		"prepack": "npm run build",
		"prepare": "husky",
		"publish:jsr": "deno publish",
		"publish:npm": "np --package-manager pnpm --any-branch",
		"start": "npm run dev",
		"test": "vitest run",
		"test:coverage": "vitest --coverage --ui",
		"test:watch": "vitest"
	},
	"type": "module",
	"typings": "./lib/index.d.ts",
	"exports": {
		".": {
			"types": "./lib/index.d.ts",
			"import": "./lib/index.js"
		}
	},
	"files": [
		"lib/",
		"LICENSE",
		"README.md"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/idleberg/web-porridge.git"
	},
	"keywords": [
		"webstorage",
		"local-storage",
		"localstorage",
		"session-storage",
		"sessionstorage",
		"storage api",
		"indexeddb"
	],
	"engines": {
		"node": ">=18.0.0"
	},
	"engineStrict": true,
	"dependencies": {
		"dot-prop": "^9.0.0",
		"idb-keyval": "^6.2.2"
	},
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@eslint/js": "^9.32.0",
		"@playwright/test": "^1.54.2",
		"@total-typescript/tsconfig": "^1.0.4",
		"@types/node": "^22.17.0",
		"@vitest/browser": "^3.2.4",
		"@vitest/coverage-v8": "^3.2.4",
		"@vitest/ui": "3.0.5",
		"concurrently": "^9.2.0",
		"eslint": "^9.32.0",
		"eslint-plugin-jsonc": "^2.20.1",
		"eslint-plugin-unicorn": "^56.0.1",
		"husky": "^9.1.7",
		"knip": "^5.62.0",
		"nano-staged": "^0.8.0",
		"np": "^10.2.0",
		"prettier": "^3.6.2",
		"remark-cli": "^12.0.1",
		"remark-preset-lint-recommended": "^7.0.1",
		"remark-preset-prettier": "^2.0.2",
		"tslib": "^2.8.1",
		"tsm": "^2.3.0",
		"tsup": "^8.5.0",
		"typescript": "^5.9.2",
		"typescript-eslint": "^8.38.0",
		"vitest": "^3.2.4"
	},
	"nano-staged": {
		"*.(json|ts)": [
			"eslint --cache --fix",
			"prettier --cache --write"
		]
	}
}
